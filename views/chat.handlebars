<body style="padding-top: 100px; padding-bottom: 100px">


  <div class="container">
    <!-- * TITLE AREA * -->
    <div class="row text-center">
      <div class="col-md-12 text-center ">
        <h1 class="title">AstroChat 3000</h1>
        <p class="description">Be polite, respectful and have fun!</p>
      </div>

    </div>

    <!-- * APP AREA * -->
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <!-- * REGISTER FORM * -->


            <!-- * CHAT AREA * -->
            <div id="chatArea">
              <div class="row">
                <div class="col-md-8">
                  <div class="card">
                    <div class="card-header">Recent Messages</div>
                    <div class="card-body">
                      <ul id="messageList">

                        {{#each posts}}
                        <li>
                          <p>{{this.textInput}} <br> {{this.createdAt}} <br> {{this.User.name}}</p>
                        </li>
                        {{/each}}

                      </ul>
                      <hr>
                      <form id="sendMessage" method="post">
                        <div class='input-group'>
                          <input id="message-box" type='text' name='message' class="form-control"
                            placeholder="Type your message...">

                          <div class='input-group-append'>
                            <button class='btn btn-primary'>Send</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <!-- * ONLINE USERS AREA * -->
                <div class="col-md-4">
                  <div class="card">
                    <div class="card-header">Users Online</div>
                    <div class="card-body p-0">
                      <ul id="onlineUsers" class="list-group list-group-flush">
                        {{#each users}}
                        <li>{{this.name}}</li>
                        {{/each}}
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>







  </div>



</body>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>